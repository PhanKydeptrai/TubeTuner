{
  "manifest_version": 3,
  "name": "TubeTuner",
  "version": "0.2",
  "description": "Customize YouTube interface with 15 hide/show options: progress bar, duration, Shorts, home feed, comments, and more",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": [
        "features/progressBar.js",
        "features/duration.js",
        "features/shorts.js",
        "features/homeFeed.js",
        "features/videoSidebar.js",
        "features/comments.js",
        "features/notificationsBell.js",
        "features/topHeader.js",
        "features/exploreSection.js",
        "features/endScreenCards.js",
        "features/moreFromYouTube.js",
        "features/hideChannel.js",
        "features/buttonsBar.js",
        "features/hideDescription.js",
        "features/grayscale.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TubeTuner",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
