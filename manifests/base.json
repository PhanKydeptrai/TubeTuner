  {
    "manifest_version": 3,
    "name": "TubeTuner",
    "version": "1.2",
    "description": "Customize YouTube interface with 16 hide/show options: progress bar, duration, Shorts, home feed, comments, and more",
    "icons": {
      "16": "src/images/icons/icon16.png",
      "32": "src/images/icons/icon32.png",
      "48": "src/images/icons/icon48.png",
      "128": "src/images/icons/icon128.png"
    },
    "permissions": [
      "storage"
    ],
    "background": {
      "service_worker": "src/background.js",
      "type": "module"
    },
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://www.youtube.com/*",
          "*://youtube.com/*"
        ],
        "js": [
          "src/features/progressBar.js",
          "src/features/duration.js",
          "src/features/shorts.js",
          "src/features/homeFeed.js",
          "src/features/videoSidebar.js",
          "src/features/comments.js",
          "src/features/notificationsBell.js",
          "src/features/topHeader.js",
          "src/features/exploreSection.js",
          "src/features/endScreenCards.js",
          "src/features/moreFromYouTube.js",
          "src/features/hideChannel.js",
          "src/features/buttonsBar.js",
          "src/features/hideDescription.js",
          "src/features/grayscale.js",
          "src/features/shop.js",
          "src/content.js"
        ],
        "css": ["src/styles.css"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "TubeTuner",
      "default_icon": {
        "16": "src/images/icons/icon16.png",
        "32": "src/images/icons/icon32.png",
        "48": "src/images/icons/icon48.png",
        "128": "src/images/icons/icon128.png"
      }
    }
  }
