{
  "design_system": {
    "name": "YouTube Controller Extension Design System",
    "version": "1.0.0",
    "description": "A modern, card-based design system for browser extension interfaces with emphasis on clean hierarchy and intuitive navigation"
  },
  "color_palette": {
    "primary": {
      "blue": "#4285F4",
      "description": "Primary brand color used for headers and key elements"
    },
    "semantic": {
      "warning_red": "#E74C3C",
      "warning_background": "#FCF3F3",
      "description": "Used for important notices and alerts"
    },
    "neutral": {
      "background": "#F8F9FA",
      "card_background": "#FFFFFF",
      "text_primary": "#1A1A1A",
      "text_secondary": "#6C757D",
      "border": "#E9ECEF"
    },
    "accent_colors": {
      "icon_blue": "#2196F3",
      "icon_purple": "#9C27B0",
      "icon_orange": "#FF9800",
      "icon_green": "#4CAF50"
    }
  },
  "typography": {
    "font_family": "system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif",
    "font_weights": {
      "normal": 400,
      "medium": 500,
      "semi_bold": 600
    },
    "font_sizes": {
      "header_title": "20px",
      "section_title": "16px",
      "body_text": "14px",
      "caption": "12px"
    },
    "line_heights": {
      "tight": 1.2,
      "normal": 1.4,
      "relaxed": 1.6
    }
  },
  "spacing": {
    "scale": "4px base unit",
    "values": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px"
    }
  },
  "layout": {
    "container": {
      "max_width": "400px",
      "padding": "16px",
      "background": "#F8F9FA"
    },
    "header": {
      "height": "80px",
      "background": "linear-gradient(135deg, #4285F4, #6366F1)",
      "padding": "16px",
      "border_radius": "8px 8px 0 0"
    },
    "content_area": {
      "padding": "16px 0",
      "gap": "12px"
    }
  },
  "components": {
    "header_component": {
      "structure": {
        "icon": "left-aligned brand icon",
        "title": "prominent title text",
        "subtitle": "descriptive subtitle",
        "controls": "right-aligned utility buttons"
      },
      "styling": {
        "background": "gradient primary color",
        "text_color": "white",
        "icon_size": "24px",
        "title_weight": "semi-bold"
      }
    },
    "notice_card": {
      "structure": {
        "icon": "warning/info icon",
        "title": "notice title",
        "description": "explanatory text"
      },
      "styling": {
        "background": "semantic warning background",
        "border": "subtle border",
        "border_radius": "8px",
        "padding": "16px",
        "icon_color": "semantic warning red"
      }
    },
    "collapsible_section": {
      "structure": {
        "icon": "category icon",
        "title": "section title",
        "chevron": "expand/collapse indicator"
      },
      "styling": {
        "background": "white",
        "border": "1px solid border color",
        "border_radius": "8px",
        "padding": "16px",
        "margin_bottom": "8px",
        "hover_effect": "subtle shadow elevation"
      },
      "states": {
        "default": "collapsed with chevron down",
        "expanded": "content visible with chevron up",
        "hover": "slight shadow and background lightening"
      }
    },
    "utility_buttons": {
      "structure": {
        "icon_only": "small circular buttons",
        "size": "32px diameter"
      },
      "styling": {
        "background": "transparent or white",
        "border": "optional subtle border",
        "border_radius": "50%",
        "padding": "8px"
      }
    }
  },
  "iconography": {
    "style": "outlined, modern icons",
    "sizes": {
      "small": "16px",
      "medium": "20px",
      "large": "24px"
    },
    "categories": {
      "brand": "logo/brand representation",
      "navigation": "chevrons, arrows",
      "content": "music, video, interface elements",
      "utility": "settings, language, theme toggles"
    }
  },
  "interaction_patterns": {
    "hover_effects": {
      "cards": "subtle shadow elevation",
      "buttons": "background color lightening",
      "icons": "color intensification"
    },
    "expansion_behavior": {
      "collapsible_sections": "smooth accordion-style expansion",
      "animation_duration": "200-300ms ease-in-out"
    },
    "focus_states": {
      "keyboard_navigation": "visible focus outline",
      "color": "primary blue",
      "style": "2px solid outline with offset"
    }
  },
  "responsive_behavior": {
    "breakpoints": {
      "mobile": "320px-480px",
      "tablet": "481px-768px",
      "desktop": "769px+"
    },
    "adaptations": {
      "mobile": "single column, larger touch targets",
      "tablet": "optimized spacing, medium touch targets",
      "desktop": "hover states, smaller precise targets"
    }
  },
  "accessibility": {
    "contrast_ratios": {
      "text_on_background": "minimum 4.5:1",
      "text_on_primary": "minimum 4.5:1"
    },
    "keyboard_navigation": "full keyboard accessibility",
    "screen_reader": "semantic HTML structure with proper ARIA labels",
    "focus_management": "logical tab order and visible focus indicators"
  },
  "design_principles": {
    "hierarchy": "clear visual hierarchy through typography and spacing",
    "consistency": "repeating patterns and predictable layouts",
    "simplicity": "minimal cognitive load with clean interfaces",
    "functionality": "form follows function with intuitive interactions",
    "modularity": "reusable components that can be combined flexibly"
  },
  "implementation_guidelines": {
    "css_methodology": "component-based with CSS custom properties",
    "component_structure": "atomic design principles",
    "state_management": "clear visual feedback for all interactive states",
    "performance": "optimize for fast rendering and smooth animations",
    "maintainability": "consistent naming conventions and documentation"
  }
}